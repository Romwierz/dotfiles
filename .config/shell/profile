# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

### Set PATH
    if [ -d "$HOME/bin" ] ; then
        PATH="$HOME/bin:$PATH"
    fi

    if [ -d "$HOME/.local/bin" ] ; then
        PATH="$HOME/.local/bin:$PATH"
    fi

    # ARM GCC Toolchain
    match=$(echo /opt/arm-gnu-toolchain-*-x86_64-arm-none-eabi/bin)
    if [ -d "$match" ] ; then
        PATH="$PATH:$match"
    fi

    # Scripts
    if [ -d "$HOME/.scripts" ]; then
        PATH="$PATH:$HOME/.scripts"
    fi

### Default programs
    export EDITOR=nvim
    export EDITOR_QUICK="nvim -c 'hi Normal guibg=none ctermbg=none | hi NormalFloat guibg=none ctermbg=none'"
    export GIT_EDITOR="$EDITOR_QUICK"
    export TERMINAL=gnome-terminal
    export BROWSER="brave-browser --disable-lcd-text"
    export PAGER=bat

### Misc
    # Required for customizing appearance in Qt6 apps (like qpdfview) using i3wm
    export QT_QPA_PLATFORMTHEME=qt6ct
    
    # Display icons in lf file manager
    LF_ICONS_FILE="$HOME/.config/lf/icons"
    if [ -f "$LF_ICONS_FILE" ]; then
        source "$LF_ICONS_FILE"
    fi
    
    export XDG_CONFIG_HOME="$HOME/.config"
    export XDG_DATA_HOME="$HOME/.local/share"
    export XDG_CACHE_HOME="$HOME/.cache"
    export XDG_STATE_HOME="$HOME/.local/state"
    export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
    
    # $HOME clean-up
    export CUDA_CACHE_PATH="$XDG_CACHE_HOME/nv"
    export DOTNET_CLI_HOME="$XDG_DATA_HOME/dotnet"
    export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
    export XCURSOR_PATH="$XDG_DATA_HOME/icons:/usr/share/icons"
    export LESSHISTFILE="$XDG_STATE_HOME/lesshst"
    export PARALLEL_HOME="$XDG_CONFIG_HOME/parallel"
    export PLATFORMIO_CORE_DIR="$XDG_DATA_HOME/platformio"
    export W3M_DIR="$XDG_DATA_HOME/w3m"
    export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"

### Secrets
    SECRETS_ENV="$XDG_CONFIG_HOME/secrets/env"
    [ -f "$SECRETS_ENV" ] && . "$SECRETS_ENV"

### If running bash
    if [ -n "$BASH_VERSION" ]; then
        # include .bashrc if it exists
        if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
        fi
    fi

